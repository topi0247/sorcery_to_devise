<div class="flex items-center justify-center bg-gray-100">
    <div class="w-full max-w-md p-8 bg-white shadow-md rounded-lg">
        <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">ログイン</h2>

        <%= form_with model: @user, url: user_sessions_path , class: "space-y-4" do |f| %>

        <!-- メールアドレス入力フィールド -->
        <div>
            <%= f.label :email, "メールアドレス", class: "block text-sm font-medium text-gray-700" %>
            <%= f.email_field :email, autofocus: true, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <!-- パスワード入力フィールド -->
        <div>
            <%= f.label :password, "パスワード", class: "block text-sm font-medium text-gray-700" %>
            <%= f.password_field :password, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <!-- ログインボタン -->
        <div class="flex justify-center">
            <%= f.submit "ログイン", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        </div>
        <% end %>

        <div class="mt-2 text-center">
            <%= link_to "アカウントをお持ちでない方はこちら", new_user_path, class: "text-indigo-600 hover:underline" %>
        </div>
    </div>
</div>